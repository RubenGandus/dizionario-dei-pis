---
import { getCollection } from "astro:content";

// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";

const grammars = ["I. Prefissi", "II. Suffissi", "III. Utilizzo delle S"];

// Content Fetching: List four most recent work projects
const letters = (await getCollection("work")).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout>
	<div class="mx-auto my-24 font-serif">
		<div class="">
			<h1 class="text-5xl sm:text-8xl mb-3">
				Dizionario enciclopedico <br /> Pis - Italiano
			</h1>
			<h3 class="">Edizione I</h3>
			<h3 class="">07/11/2024</h3>

			<div
				class="mt-10 flex flex-col gap-y-10 mx-auto lg:flex-row justify-center gap-x-10 text-left"
			>
				<Card title="Dizionario">
					{
						letters.map((project) => (
							<a
								href={`/work/` + project.slug}
								class="letter "
							>
								{project.data.title}
							</a>
						))
					}
				</Card>
			</div>
		</div>
	</div>

	<script>
		function getRandomInt(max:number) {
			return Math.floor(Math.random() * max);
		}
	
		const letters = document.querySelectorAll(".letter");
		letters.forEach((letter) => {
			const size = getRandomInt(9);
			letter.classList.add(`text-${size}xl`); 
			console.log(`text-[${size}px]`);
		});
	</script>

</BaseLayout>
