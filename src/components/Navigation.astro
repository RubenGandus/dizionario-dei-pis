---
import { getCollection } from "astro:content";
interface Props {
    arrows: boolean;
}



const { arrows } = Astro.props;
---

<div
    class="flex flex-row justify-between w-full bg-white left-0 text-5xl playfair py-5 mb-2"
>
    <a class="text-xl md:text-5xl" href="/">●</a>
    {
        arrows && (
            <div class="flex flex-row  md:gap-x-5">
                <a href="">←</a>
                <a href="/">→</a>
            </div>
        )
    }
</div>
